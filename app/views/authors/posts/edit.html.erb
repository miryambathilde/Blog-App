<%= link_to "Back to posts", posts_path, class: 'btn btn-secondary mb-4' %>

<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Editing Post</h4>
          <%= render "form", post: @post %>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <%# form elements %>
    <%= form_with(model: [@post, @paragraph]) do |form| %>
      <%= form.submit %>
    <% end %>
  </div>
</div>

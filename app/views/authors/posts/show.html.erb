<div class="container mt-4">
  <p style="color: green"><%= notice %></p>
  
  <div class="container">
    <%= render @post %>
  
    <%= link_to "Edit this post", edit_post_path(@post), class: 'btn btn-primary' %>
    <%= link_to "Back to posts", posts_path, class: 'btn btn-dark ml-2' %>
  
    <%= button_to "Destroy this post", @post, method: :delete, class: 'btn btn-danger mt-2' %>
  </div>
</div>
